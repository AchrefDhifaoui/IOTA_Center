{% extends '../template.html.twig' %}

{% block title %}Setting index{% endblock %}


{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">
                        Paramétre
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="card">
                <div class="row g-0">
                    <div class="col-3 d-none d-md-block border-end">
                        <div class="card-body">
                            <h4 class="subheader">Parametre du société</h4>
                            <div class="list-group list-group-transparent">
                                <a href="{{ path('user_profile') }}" class="list-group-item list-group-item-action d-flex align-items-center active">Mon compte</a>
                                <a href="{{ path('parametre_iota_edit') }}" class="list-group-item list-group-item-action d-flex align-items-center ">Parametre IOTA</a>
                            </div>
                            <br>
                            <h4 class="subheader"> Parametre Formation </h4>
                            <div class="list-group list-group-transparent">
                                <a href="{{path('app_domaine_index')}}" class="list-group-item list-group-item-action d-flex align-items-center ">Domaine</a>
                                <a href="{{ path('app_mode_index') }}" class="list-group-item list-group-item-action d-flex align-items-center "> Mode de formation</a>
                                <a href="{{ path('app_unite_index') }}" class="list-group-item list-group-item-action d-flex align-items-center ">unité</a>
                            </div>
                            <br>
                            <h4 class="subheader">Parametre financier</h4>
                            <div class="list-group list-group-transparent">
                                <a href="{{ path('app_r_s_index') }}" class="list-group-item list-group-item-action">Retenue a ressource</a>
                                <a href="{{ path('app_t_v_a_index') }}" class="list-group-item list-group-item-action">TVA</a>
                                <a href="{{ path('app_timbre_index') }}" class="list-group-item list-group-item-action">Timbre</a>
                            </div>
                        </div>
                    </div>

                    <div class="col d-flex flex-column">
                        <div class="card-body">{{ form_start(form) }}
                            <h2 class="mb-4">Mon compte</h2>
                            <h3 class="card-title">Profile Detaille</h3>
                            <div class="row g-3">
                                <div class="col-md">
                                    {{ form_row(form.nom) }}
                                </div>
                                <div class="col-md">
                                    {{ form_row(form.prenom) }}
                                </div>
                            </div>
                            <h3 class="card-title mt-4">Email</h3>
                            <p class="card-subtitle">Ce contact sera montré publiquement aux autres, alors choisissez-le soigneusement.</p>
                            <div>
                                <div class="row g-2">
                                    <div class="col-auto">
                                       {{ form_row(form.email) }}
                                    </div>

                                </div>
                            </div>
                            <h3 class="card-title mt-4">Password</h3>
                            <div class="row g-3">
                                <div class="col-md">
                                    {{ form_row(form.password.first) }}
                                </div>
                                <div class="col-md">
                                    {{ form_row(form.password.second) }}
                                </div>
                            </div>
                        </div>
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}
                        <div class="card-footer bg-transparent mt-auto">
                            <div class="btn-list justify-content-end">

                                <button type="submit" class="btn btn-primary ms-auto" >
                                    <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 5l0 14" /><path d="M5 12l14 0" /></svg>
                                    {{ button_label|default('Enregistrer') }}
                                </button>
                            </div>{{ form_end(form) }}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}