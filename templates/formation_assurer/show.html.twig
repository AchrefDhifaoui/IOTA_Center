{% extends 'template.html.twig' %}

{% block title %}FormationAssurer{% endblock %}

{% block body %}
    <div class="page-body">
        <div class="container-xl">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Formation Details</h3>
                </div>
                <div class="card-body">
                    <div class="datagrid">

                        <div class="datagrid-item">
                            <div class="datagrid-title">Formateur</div>
                            <div class="datagrid-content">
                                <div class="d-flex align-items-center">
                                    <span class="avatar avatar-xs me-2 rounded" style="background-image: url({{ asset('uploads/formateur-image/') }}{{ formation_assurer.formateur.image }})"></span>
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#modal-showFormateur" class="dropdown-item">{{ formation_assurer.formateur.nom }}  {{ formation_assurer.formateur.prenom }}</a>
                                </div>
                            </div>
                        </div>

                        <div class="datagrid-item">
                            <div class="datagrid-title">Client</div>
                            <div class="datagrid-content">
                                <div class="d-flex align-items-center">
                                    <span class="avatar avatar-xs me-2 rounded" style="background-image: url({{ asset('uploads/client-image/') }}{{ formation_assurer.client.image }})"></span>
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#modal-show" class="dropdown-item">{{ formation_assurer.client.nom }} </a>
                                </div>
                            </div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">Unite</div>
                            <div class="datagrid-content">
                                <label class="form-check">
                                    <span class="form-check-label">{{ formation_assurer.unite.titre }}</span>
                                </label>
                            </div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">titre de formation</div>
                            <div class="datagrid-content">{{ formation_assurer.formation.titre }}</div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">quantite</div>
                            <div class="datagrid-content">{{ formation_assurer.quantite }}</div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">Prix unitaire</div>
                            <div class="datagrid-content">{{ formation_assurer.puFormation}}</div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title"> date</div>
                            <div class="datagrid-content">{{ formation_assurer.dateDebut ? formation_assurer.dateDebut|date('Y-m-d') : '' }}</div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">Domaine</div>
                            <div class="datagrid-content">
                                <input type="text" class="form-control form-control-flush" placeholder="{{ formation_assurer.formation.domaine.titre }}">
                            </div>
                        </div>
                        <div class="datagrid-item">
                            <div class="datagrid-title">formation description</div>
                            <div class="datagrid-content">
                                {{ formation_assurer.formation.detail }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal modal-blur fade" id="modal-showFormateur" tabindex="-1" role="dialog" aria-hidden="true">

        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Formateur</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                        <div class="card" style="border: none">
                            <div class="row">
                                <div class="col-5">
                                    <!-- Photo -->
                                    <img src="{{ asset('uploads/formateur-image/') }}{{ formation_assurer.formateur.image }}" class="w-100 h-100 object-cover card-img-start"/>
                                </div>
                                <div class="col-7" >
                                    <div class="card-body" >
                                        <h3 class="card-title">{{ formation_assurer.formateur.nom }}  {{ formation_assurer.formateur.prenom }}</h3>
                                        <p class="text-muted"> <strong>Email : </strong> {{ formation_assurer.formateur.email }}</p>
                                        <p class="text-muted"> <strong>Tel : </strong> {{ formation_assurer.formateur.telephone }}</p>
                                        <p class="text-muted"> <strong>Adresse : </strong> {{ formation_assurer.formateur.adresse }}</p>
                                        <p class="text-muted"> <strong>CIN : </strong> {{ formation_assurer.formateur.cin }}</p>
                                        <p class="text-muted"> <strong>Domaine : </strong> {% for domaine in formation_assurer.formateur.domaine %} {{ domaine.titre }} , {% endfor %}</p>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex">
                                        <a href="#" class="card-btn"><!-- Download SVG icon from http://tabler-icons.io/i/mail -->
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2 text-muted" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" /><path d="M3 7l9 6l9 -6" /></svg>
                                            Email</a>
                                        <a href="#" class="card-btn"><!-- Download SVG icon from http://tabler-icons.io/i/phone -->
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2 text-muted" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" /></svg>
                                            Call</a>
                                    </div>
                                </div>

                            </div>
                        </div>

                </div>
            </div>
        </div>
    </div>


    <div class="modal modal-blur fade" id="modal-show" tabindex="-1" role="dialog" aria-hidden="true">

        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Client</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="card" style="border: none">
                        <div class="row">
                            <div class="col-5">
                                <!-- Photo -->
                                <img src="{{ asset('uploads/client-image/') }}{{ formation_assurer.client.image }}" class="w-100 h-100 object-cover card-img-start"/>
                            </div>
                            <div class="col-7" >
                                <div class="card-body" >
                                    <h3 class="card-title">{{ formation_assurer.client.nom }}</h3>
                                    <p class="text-muted"> <strong>Email : </strong> {{ formation_assurer.client.email }}</p>
                                    <p class="text-muted"> <strong>Tel : </strong> {{ formation_assurer.client.telephone }}</p>
                                    <p class="text-muted"> <strong>Adresse : </strong> {{ formation_assurer.client.adresse }}</p>
                                    <p class="text-muted"> <strong>MF : </strong>  {{ formation_assurer.client.matriculeFiscale }}</p>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex">
                                    <a href="#" class="card-btn"><!-- Download SVG icon from http://tabler-icons.io/i/mail -->
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2 text-muted" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" /><path d="M3 7l9 6l9 -6" /></svg>
                                        Email</a>
                                    <a href="#" class="card-btn"><!-- Download SVG icon from http://tabler-icons.io/i/phone -->
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon me-2 text-muted" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" /></svg>
                                        Call</a>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

