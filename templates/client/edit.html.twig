{% extends '../template.html.twig' %}

{% block title %}Edit Client{% endblock %}

{% block body %}
<div class="container-xl">

<div class="card" style="margin: 17px; height: 75px ">

        <div class="row row-cards">
            <div class="col-12">
                <div class="card">
                    {{ form_start(form) }}
                    <div class="card-body">
                        <h3 class="card-title">Modifier Client</h3>
                        <div class="row row-cards">
                            <div class="col-md-5">
                                <div class="mb-3">
                                    {{ form_row(form.image) }}
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="mb-3">
                                    {{ form_row(form.nom) }}
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="mb-3">
                                    {{ form_row(form.email) }}
                                </div>
                            </div>

                            <div class="col-sm-6 col-md-2">
                                <div class="mb-3">
                                    {{ form_row(form.telephone) }}
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-2">
                                <div class="mb-3">
                                    {{ form_row(form.adresse) }}
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-2">
                                <div class="mb-3">
                                    {{ form_row(form.matriculeFiscale) }}
                                </div>
                            </div>




                        </div>
                    </div>
                    <div class="card-footer text-end">
                        <button type="submit" class="btn btn-primary">{{ button_label|default('Valider') }}</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
